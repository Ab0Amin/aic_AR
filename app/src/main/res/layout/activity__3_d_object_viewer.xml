<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activitiesCode._3D_objectViewer">


    <android.opengl.GLSurfaceView android:layout_width="0dp" android:layout_height="0dp"
                                  tools:ignore="MissingConstraints" app:layout_constraintEnd_toEndOf="parent"
                                  app:layout_constraintStart_toStartOf="parent"
                                  app:layout_constraintTop_toTopOf="parent"
                                  android:id="@+id/glview" app:layout_constraintBottom_toBottomOf="parent">

    </android.opengl.GLSurfaceView>
    <Button
            android:text="View in your space"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button9" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="@+id/glview"
            android:onClick="ARshow" app:cornerRadius="30dp" android:backgroundTint="#00E4D8D8"
            app:icon="@drawable/aricon" app:iconSize="25dp" android:textAllCaps="false"/>
    <ImageView
            android:layout_width="71dp"
            android:layout_height="74dp" app:srcCompat="@android:drawable/btn_plus"
            android:id="@+id/imageView3"
            android:onClick="zoomIn"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="15dp" android:layout_marginStart="15dp"/>
    <ImageView
            android:layout_width="73dp"
            android:layout_height="78dp" app:srcCompat="@android:drawable/btn_minus"
            android:id="@+id/imageView4"
            android:onClick="zoomOut"
            app:layout_constraintTop_toTopOf="@+id/glview" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="15dp" android:layout_marginTop="15dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>




